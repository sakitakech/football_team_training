<h1 class="text-2xl font-bold text-center mb-6">チームを作成する</h1>

<%= form_with(model: @team, local: true, class: "max-w-md mx-auto bg-gray-100 p-6 rounded shadow-md space-y-6") do |f| %>
  <% if @team.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-semibold">エラーがあります:</h2>
      <ul class="list-disc pl-5">
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :league_id, "リーグを選択", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.collection_select :league_id, League.all, :id, :name,
                            { prompt: "リーグを選んでください" },
                            class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :name, "チーム名", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.submit "チームを作成する", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition" %>
  </div>
<% end %>
