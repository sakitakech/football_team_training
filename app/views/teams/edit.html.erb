<div class="max-w-xl mx-auto bg-gray-100 shadow-md rounded-lg p-6 mt-8 space-y-6 text-gray-800">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">チーム情報編集</h2>

  <%= form_with model: @team, local: true do |f| %>
    <% if @team.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-semibold">エラーがあります:</h2>
      <ul class="list-disc pl-5">
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div>
      <%= f.label :league_id, "リーグ", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :league_id, League.all, :id, :name,
                              { include_blank: "選択してください" },
                              class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :name, "チーム名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "更新する",
      data: { turbo_confirm: "メンバー全員のチーム情報が更新されますが、本当にこの内容で更新してもよろしいですか？" },
      class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>

    </div>
  <% end %>
</div>

<!-- 戻るリンク -->
<div class="text-center mt-6">
  <%= link_to "戻る", team_path, class: "text-sm text-blue-600 hover:underline" %>
</div>
