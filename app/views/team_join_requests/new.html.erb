<div class="max-w-lg mx-auto p-6 bg-white rounded shadow">
  <h2 class="text-xl font-bold mb-4">チーム参加リクエスト</h2>

  <%= form_with url: team_join_requests_path, method: :post, local: true do |form| %>
    <%= hidden_field_tag :token, @token %>

    <div class="mb-4">
      <%= form.label :message, "情報", class: "block font-medium" %>
      <%= form.text_area :message, rows: 4, class: "w-full border rounded p-2", placeholder: "例）4年WRの西岡です。よろしくお願いします。" %>
    </div>

    <%= form.submit "リクエストを送信", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  <% end %>
</div>