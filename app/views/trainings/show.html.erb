<p style="color: green"><%= notice %></p>


<% content_for :title, "詳細" %>

<br>
<%= render @training %>

<% if @user == current_user %>
  <div class="float-right flex gap-10 ml-10 mt-10 mr-5">
    <span class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold py-2 px-4 rounded transition">
      <%= link_to "編集", edit_training_path(@training) %>
    </span> 
    <span class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold py-2 px-4 rounded transition">
      <%= button_to "削除", @training, method: :delete %>
    </span> 
    <span class="text-sm mt-2">
      <%= link_to "一覧に戻る", trainings_path %>
    </span> 
  </div>
<% end %>