<%= link_to training, class: "block transition rounded-md" do %>
  <div id="<%= dom_id training %>" class="max-w-3xl mx-auto bg-gray-100 shadow-sm rounded-md p-4 text-sm text-gray-800 space-y-4">

    <!-- 日時 -->
    <div>
      <p><span class="text-gray-500 font-medium">日時:</span> <%= training.datetime.strftime("%Y/%m/%d %H:%M") %></p>
    </div>

    <!-- トレーニング内容 -->
    <div>
      <h2 class="text-base font-semibold text-gray-700 mb-2">トレーニング</h2>
      <p><span class="text-gray-500 font-medium">部位:</span> <%= training.part %></p>
      <p><span class="text-gray-500 font-medium">内容:</span> <%= simple_format(training.content) %></p>
      <p><span class="text-gray-500 font-medium">メモ:</span> <%= simple_format(training.memo) %></p>
    </div>

    <!-- 身体情報 -->
    <div>
      <h2 class="text-base font-semibold text-gray-700 mb-2">身体情報</h2>
      <p><span class="text-gray-500 font-medium">体重:</span> <%= training.body_weight %> kg</p>
      <p><span class="text-gray-500 font-medium">体脂肪率:</span> <%= training.body_fat %> %</p>
    </div>

    <!-- マックス記録 -->
    <div>
      <h2 class="text-base font-semibold text-gray-700 mb-2">マックス記録</h2>
      <div class="grid grid-cols-2 gap-4">
        <% bench = training.training_max_weights.find { |tw| tw.max_weight.name == "ベンチプレス" } %>
        <p><span class="text-gray-500 font-medium">ベンチプレス:</span> <%= bench&.record || "-" %> kg</p>

        <% squat = training.training_max_weights.find { |tw| tw.max_weight.name == "スクワット" } %>
        <p><span class="text-gray-500 font-medium">スクワット:</span> <%= squat&.record || "-" %> kg</p>

        <% deadlift = training.training_max_weights.find { |tw| tw.max_weight.name == "デッドリフト" } %>
        <p><span class="text-gray-500 font-medium">デッドリフト:</span> <%= deadlift&.record || "-" %> kg</p>

        <% clean = training.training_max_weights.find { |tw| tw.max_weight.name == "クリーン" } %>
        <p><span class="text-gray-500 font-medium">クリーン:</span> <%= clean&.record || "-" %> kg</p>
      </div>
    </div>

  </div>
<% end %>