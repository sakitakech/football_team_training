<%= form_with(model: training, class: "max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6 space-y-6") do |form| %>
  <% if training.errors.any? %>
    <div class="bg-red-100 text-red-700 border border-red-400 rounded p-4">
      <h2 class="text-lg font-bold mb-2">
        <%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:
      </h2>
      <ul class="list-disc pl-5 space-y-1">
        <% training.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div>
    <%= form.label :日付, class: "block font-semibold mb-1" %>
    <%= form.datetime_field :datetime, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= form.label :部位, class: "block font-semibold mb-1" %>
    <%= form.text_field :part, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= form.label :トレーニング内容, class: "block font-semibold mb-1" %>
    <%= form.text_area :content, rows: 3, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= form.label :メモ, class: "block font-semibold mb-1" %>
    <%= form.text_area :memo, rows: 2, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= form.label :体重, class: "block font-semibold mb-1" %>
    <%= form.number_field :body_weight, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= form.label :体脂肪, class: "block font-semibold mb-1" %>
    <%= form.number_field :body_fat, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <hr class="my-6 border-t border-gray-300">

  <h3 class="text-xl font-bold text-gray-800 mb-4">マックス値</h3>

  <div class="grid gap-4">
    <%= form.fields_for :training_max_weights do |tmw_fields| %>
      <div class="border p-4 rounded shadow-sm">
        <%= tmw_fields.hidden_field :max_weight_id %>
        <% max_weight_name = @max_weights[tmw_fields.object.max_weight_id]&.name || "種目" %>
        <p class="font-semibold text-gray-700 mb-2"><%= max_weight_name %></p>

        <%= tmw_fields.label :record, "重量 (kg)", class: "block mb-1 font-medium" %>
        <%= tmw_fields.number_field :record, class: "w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>
    <% end %>
  </div>

  <div class="pt-4">
    <%= form.submit "保存する", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition" %>
  </div>
<% end %>
