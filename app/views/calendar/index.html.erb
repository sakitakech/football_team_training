<div class="max-w-md mx-auto mb-4">
  <label for="positionSelect" class="block text-sm font-bold text-gray-700 mb-1">ポジションで絞り込む:</label>
  <select id="positionSelect" class="w-full p-2 rounded bg-gray-100 text-gray-800 shadow">
    <option value="">全て表示</option>
    <% @positions.each do |pos| %>
      <option value="<%= pos.id %>"><%= pos.name %></option>
    <% end %>
  </select>
</div>

<div class="max-w-md mx-auto mb-4">
  <label for="memberSelect" class="block text-sm font-bold text-gray-700 mb-1">選手を選択:</label>
  <select id="memberSelect" class="w-full p-2 rounded bg-gray-100 text-gray-800 shadow">
    <option value="">全員表示</option>
    <% @team_members.each do |member| %>
      <option value="<%= member.id %>"><%= member.last_name %> <%= member.first_name %></option>
    <% end %>
  </select>
</div>

<!-- ↓これをカレンダーの上に出す -->
<div id="selectedUserLabel" class="text-center text-sm font-semibold text-gray-600 mt-2 hidden"></div>


<div data-controller="calendar" class="p-4 bg-white rounded shadow"></div>
