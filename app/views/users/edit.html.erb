<div class="max-w-xl mx-auto bg-gray-100 shadow-md rounded-lg p-6 mt-8 space-y-6 text-gray-800">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">プロフィール編集</h2>

  <% if @user.errors.any? %>
  <div class="bg-red-100 text-red-700 border border-red-400 rounded p-4">
    <h2 class="text-lg font-bold mb-2">
       <%= t('errors.messages.not_saved', count: @user.errors.count) %>
    </h2>
    <ul class="list-disc pl-5 space-y-1">
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with model: @user, local: true do |f| %>
    <div>
      <%= f.label :last_name, "姓", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :first_name, "名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :position_id, "ポジション", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :position_id, Position.all, :id, :name, include_blank: "選択してください", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :introduction, "自己紹介", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :introduction, rows: 5, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "更新する", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
<!-- 戻るリンク -->
<div class="text-center mt-6">
  <%= link_to "戻る", user_path(current_user), class: "text-sm text-blue-600 hover:underline" %>
</dev>