<h1 class="text-2xl font-bold text-center mb-6">ポジション別メンバー一覧</h1>

<div class="max-w-4xl mx-auto space-y-8">
  <% @positions.each do |position| %>
    <div>
      <h2 class="text-xl font-semibold border-b pb-1 mb-4"><%= position.name %></h2>

      <div class="space-y-4">
        <% position.users.where(team_id: current_user.team_id).each do |user| %>
          <%= render partial: "user_card", locals: { user: user } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>