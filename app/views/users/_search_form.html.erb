<%= search_form_for q, url: url, html: { class: "w-full max-w-xl mx-auto space-y-4" } do |f| %>
  <div class="form-control">
    <%= f.label :position_id_eq, "ポジションを選択", class: "block text-sm font-bold text-gray-700 mb-1" %>
    <%= f.select :position_id_eq,
          Position.all.map { |p| [p.name, p.id] },
          { include_blank: "ポジションを選択" },
          class: "w-full border border-gray-300 rounded px-4 py-2 bg-white text-black focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex gap-2">
    <%= f.search_field :full_name_cont,
          class: "flex-1 border border-gray-300 rounded px-4 py-2 bg-white text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "選手名で検索" %>

    <%= f.submit "検索", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded" %>
  </div>
<% end %>