<%= form_with model: @user, url: complete_profile_path, method: :patch, html: { class: "max-w-md mx-auto mt-12 bg-gray-200 p-8 rounded shadow-md space-y-6" } do |f| %>
    <h2 class="text-2xl font-bold text-center text-gray-800">初回ログイン：プロフィールを完成させてください</h2>
  
    <%= render "devise/shared/error_messages", resource: @user %>
  
    <div>
      <%= f.label :last_name, "姓", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name, autocomplete: "family-name", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <div>
      <%= f.label :first_name, "名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name, autocomplete: "given-name", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <em class="text-xs text-gray-500">（6文字以上）</em>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <div>
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <div>
      <%= f.label :position_id, "ポジション", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :position_id, Position.all, :id, :name, include_blank: "選択して下さい", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <div>
      <%= f.submit "登録完了", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>
  