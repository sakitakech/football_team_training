<div class="bg-gray-100 rounded shadow p-4">
  <h3 class="text-lg font-semibold">
    <%= user.last_name %> <%= user.first_name %>
    <% if user.admin? %>(管理者)<% end %>
  </h3>
  <p class="text-sm text-gray-600">自己紹介：</p>
  <p class="text-gray-800"><%= simple_format(user.introduction.presence || "") %></p>
  <div class="mt-2">

    <%= link_to "トレーニング", user_trainings_path(user), class: "text-blue-600 hover:underline text-sm" %> | 
    <%= link_to "カレンダー", calendar_path(user_id: user.id), class: "text-blue-600 hover:underline text-sm" %> | 
    <%= link_to "チャート", charts_path(user_id: user.id), class: "text-blue-600 hover:underline text-sm" %> |
    <% if current_user.admin? && user.team_id.present? && user != current_user %><%= button_to "チームから外す", remove_from_team_user_path(user), method: :patch, class: "bg-red-500 text-white px-2 py-1 rounded" %><% end %>
  </div>
</div>
