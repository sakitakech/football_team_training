<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-md mx-auto mt-12 bg-gray-200 p-8 rounded shadow-md space-y-6" }) do |f| %>
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">
    <%= resource_name.to_s.humanize %>の編集
  </h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-yellow-600">
      確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <!-- 新しいパスワード -->
  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500">（<%= @minimum_password_length %>文字以上）</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- パスワード確認 -->
  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 現在のパスワード -->
  <div>
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <em class="text-xs text-gray-500">（変更を反映させるには現在のパスワードが必要です）</em>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 更新ボタン -->
  <div>
    <%= f.submit "更新する", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>
<% end %>

<!-- アカウント削除 -->
<div class="max-w-md mx-auto mt-8 bg-white p-6 rounded shadow-md">
  <h3 class="text-lg font-bold text-red-600 mb-2">アカウント削除</h3>
  <p class="text-sm text-gray-600 mb-4">本当に退会しますか？この操作は取り消せません。</p>
  <%= button_to "アカウントを削除", registration_path(resource_name),
        method: :delete,
        data: { confirm: "本当に削除しますか？" },
        class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
</div>

<!-- 戻るリンク -->
<div class="text-center mt-6">
  <%= link_to "戻る", user_path(current_user), class: "text-sm text-blue-600 hover:underline" %>
</div>
