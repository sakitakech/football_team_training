<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_user_session_path %><br />
<% end %>
<br>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "サインアップ", new_member_registration_path(resource_name) %><br />
<% end %>
<br>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "管理者サインアップ", new_admin_registration_path(resource_name) %><br />
<% end %>

<br>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた方", new_password_path(resource_name) %><br />
<% end %>
<br>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールを再送するにはこちら", new_user_confirmation_path(resource_name) %><br />
<% end %>
<br>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "アカウントのロックを解除するには、こちらをクリックしてください", new_unlock_path(resource_name) %><br />
<% end %>
<br>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <br><br>
    <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン（メンバー用）", user_line_omniauth_authorize_path(role: "member"), method: :post, data: { turbo: false } %><br>
    <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン（管理者用）", user_line_omniauth_authorize_path(role: "admin"), method: :post, data: { turbo: false } %>
  <% end %>
<% end %>


